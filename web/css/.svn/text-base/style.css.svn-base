* { margin: 0; padding: 0; outline: 0; }

body {
    font-size: 12px;
    line-height: 1.3;
    font-family: arial, sans-serif;
    color: #000;
    background: #3b321d;
    min-width: 981px;
}

a { color: #4f862b; text-decoration: none; cursor: pointer; }
a:hover { text-decoration: underline; }
a img { border: 0; }

input, textarea, select { font-size: 12px; font-family: arial, sans-serif; }
textarea { overflow: auto; }

h2, h3, h4 { color: #47443a; font-family: 'Times New Roman', Arial, serif; }

.cl { display: block; height: 0; font-size: 0; line-height: 0; text-indent: -4000px; clear: both; }
.notext { font-size: 0; line-height: 0; text-indent: -4000px; }
.left, .alignleft { float: left; display: inline; }
.right, .alignright { float: right; display: inline; }

.shell { width: 981px; margin: 0 auto; }

#holder { background: url(images/holder.jpg) repeat 0 0; }

#wrapper { background: url(images/top-line.png) repeat-x left top; }

#top-line { background: url(images/body-top.jpg) no-repeat center top; }

h1#logo { float: left; width: 270px; font-size: 0; line-height: 0; padding: 0 0 0 27px; }
h1#logo a { display: block; height: 80px; background: url(images/logo.png) no-repeat 0 0; text-indent: -4000px; }

#header { padding: 25px 0 114px 0; width: 100%; background: url(images/header.png) no-repeat 350px -1px; }

#navigation { float: right; height: 58px; position: relative; margin-top: 22px; }
#navigation ul { background: url(images/navigation.png) repeat-x right top; height: 58px; }
#navigation ul li { float: left; list-style: none; height: 58px; position: relative; padding-right: 2px; background: url(images/separate.png) no-repeat right top; }
#navigation ul li a { float: left; font-family: 'Trebuchet MS', Arial, serif; color: #ece8d7; font-size: 18px; line-height: 58px; font-style: italic; padding: 0 32px 0 32px; font-weight: bold; }
#navigation ul li.last { background: none; padding-right: 0; }
#navigation ul li a:hover, #navigation ul li a.active { text-decoration: none; background: url(images/navigation-active.png) repeat-x left top; }

#navigation .radius { background: url(images/navigation-radius.png) no-repeat left top; width: 6px; height: 6px; position: absolute; z-index: 999; }
#navigation .top-left { background-position: 0 0; left: 0; top: 0; }
#navigation .top-right { background-position: -6px 0; right: 0; top: 0; }
#navigation .bottom-left { background-position: 0 -6px; left: 0; bottom: 0; }
#navigation .bottom-right { background-position: -6px -6px; right: 0; bottom: 0; }

#main { background: url(images/main-center.png) repeat-y center top; width: 100%; position: relative; z-index: 999; margin-bottom: -57px; }
#main .top { background: url(images/main-top.png) no-repeat center top; width: 100%; padding-top: 47px; }
#main .bottom { background: url(images/main-bottom.png) no-repeat center bottom; padding: 0 35px 40px 47px; }

#content { float: left; width: 617px; }
#content .info { padding-bottom: 36px; }
#content .info h2 { float: left; width: 430px; font-size: 30px; line-height: 35px; padding-left: 2px;  }
#content .info .date-and-name { float: right; width: 175px; text-align: right; padding: 6px 0 0 0; }
#content .info .date-and-name em { display: block; font-size: 12px; line-height: 12px; font-weight: bold; color: #538c2e; padding: 0 !important; }
#content .info .date-and-name p { font-size: 11px; line-height: 11px; color: #db7037; font-weight: bold; text-transform: uppercase; }

#sidebar { float: right; width: 227px; }
#sidebar .border-bg { background: url(images/border-slider.png) repeat-y left top; width: 195px; padding: 55px 15px 0 17px; margin-bottom: 59px; }
#sidebar .border-bg .last { padding-bottom: 0; }

#footer { background: #3b321d url(images/footer.png) repeat-x left top; padding: 0 0 20px 0; position: relative; width: 100%; }
#footer .shadow-footer { background: url(images/shadow-footer.jpg) no-repeat center top; width: 100%; padding-top: 78px; }

#footer p { line-height: 20px; color: #a9a394; }
#footer h4 { color: #e4deca; font-size: 24px; line-height: 35px; background: url(images/border-footer.png) repeat-x left bottom; margin-bottom: 15px; }
#footer ul li { list-style: none; font-size: 14px; padding-bottom: 18px; }
#footer ul li a { line-height: 14px; color: #aaa395; font-weight: bold; }

#footer .col { float: left; }
#footer .first { width: 337px; padding-right: 52px; }
#footer .second { width: 161px; padding-right: 50px; }
#footer .three { width: 254px; }
#footer .copy { padding: 29px 0 0 0; text-align: right; }
#footer .copy a { color: #a9a394; }

#footer .shell { padding-left: 64px; width: 917px; }

.a-link { text-align: right; font-family: 'Times New Roman', Arial, serif; }
.a-link a { background: url(images/bullet.png) no-repeat right 4px; padding-right: 14px; font-size: 14px; line-height: 20px; color: #db6e35 !important; text-decoration: underline; font-weight: bold; font-style: italic; }
.a-link a:hover { text-decoration: none; }

.border-line { background: url(images/border-line.png) repeat-x left top; height: 17px; margin: 45px 0 42px 0; }

.post em { display: block; font-size: 12px; line-height: 18px; color: #307d34; padding-bottom: 21px; }
.post p { font-size: 12px; line-height: 20px; color: #47443a; }
.post a { color: #37713a; text-decoration: underline; font-style: italic; }
.post a:hover { text-decoration: none; }
.post p em { display: inline; }

.post .image { width: 621px; margin-bottom: 34px; position: relative; }
.post .image img { display: block; padding-left: 10px; }
.post .image .top-bg { width: 621px; height: 9px; background: url(images/image-top.png) no-repeat left top; position: absolute; left: 0; top: -9px; font-size: 0; line-height: 0; text-indent: -4000px; }
.post .image .center-bg { width: 621px; background: url(images/image-center.png) repeat-y left top; }
.post .image .bottom-bg { width: 621px; height: 9px; background: url(images/image-bottom.png) no-repeat left bottom; position: absolute; left: 0; bottom: -9px; font-size: 0; line-height: 0; text-indent: -4000px; }

.paging { position: relative; width: 100%; background: url(images/border.png) repeat-x left top; color: #6b685c; line-height: 33px; font-weight: bold; font-family: 'Times New Roman', Arial, serif; margin-top: 50px; }
.paging .bottom-border { background: url(images/border.png) repeat-x left bottom; width: 100%; }
.paging .prev { position: absolute; left: 0; top: 0; }
.paging .next { position: absolute; right: 0; top: 0; }
.paging .page { width: 480px; margin: 0 auto; text-align: center; }
.paging .page a { margin: 0 12px; }
.paging a { color: #6b685c; }
.paging a:hover, .paging a.active { color: #db6e35; text-decoration: none; }

.widget { padding-bottom: 57px; }
.widget h3 { font-size: 24px; line-height: 35px; background: url(images/border-heading.png) repeat-x left bottom; padding-bottom: 8px; margin-bottom: 26px; }
.widget ul li { vertical-align: bottom; list-style: none; background: url(images/border.png) repeat-x left bottom; }
.widget ul li a { display: block; line-height: 12px; padding: 16px 0 16px 1px; }

.widget .comments { font-size: 12px; line-height: 20px; color: #574a2d; padding: 0 0 20px 0; }
.widget .comments ul li { padding: 0 0 12px 0; margin-bottom: 9px; }
.widget .comments a { display: inline; }
.widget .a-link { text-align: left; padding-left: 6px; }
.widget .last { padding-bottom: 0; }

.btn-first,
.btn-second { display: block; background: url(images/buttons.png) no-repeat -2px 0; width: 227px; height: 74px; line-height: 74px; font-family: 'Trebuchet MS', Arial, sans-serif; color: #fff; text-align: center; margin-bottom: 15px; font-size: 22px; font-weight: bold; }
.btn-first:hover,
.btn-second:hover { text-decoration: none; }

.btn-second { font-size: 20px; background-position: -2px -89px; }

.bottom-background { position: absolute; left: 0; top: -256px; width: 100%; height: 256px; background: url(images/body-bottom.jpg) repeat-x left top; z-index: 111; font-size: 0; line-height: 0; text-indent: -4000px; }
.bottom-background .shadow-bg { background: url(images/shadow-bottom.jpg) no-repeat center top; width: 100%; height: 256px; font-size: 0; line-height: 0; text-indent: -4000px; }